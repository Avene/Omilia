<resources>
    <!-- Default screen margins, per the Android Design guidelines. -->
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>

    <!-- spacing -->
    <dimen name="spacing_ex_ex_small">2dp</dimen>
    <dimen name="spacing_ex_small">4dp</dimen>
    <dimen name="spacing_small">8dp</dimen>
    <dimen name="spacing_mid">16dp</dimen>
    <dimen name="spacing_large">24dp</dimen>
    <dimen name="spacing_ex_large">32dp</dimen>

    <!-- text size -->
    <dimen name="text_disp_ex_large">112sp</dimen>
    <dimen name="text_disp_large">56sp</dimen>
    <dimen name="text_disp_mid">45sp</dimen>
    <dimen name="text_disp_small">34sp</dimen>
    <dimen name="text_headline">24sp</dimen>
    <dimen name="text_title">21sp</dimen>
    <dimen name="text_subhead">17sp</dimen>
    <dimen name="text_body">15sp</dimen>
    <dimen name="text_caption">13sp</dimen>
    <dimen name="text_button">15sp</dimen>

    <!-- navigation drawer -->
    <!-- Per the design guidelines, navigation drawers should be between 240dp and 320dp:
         https://developer.android.com/design/patterns/navigation-drawer.html -->
    <dimen name="nav_drawer_width">240dp</dimen>
    <dimen name="pad_nav_drawer_side">@dimen/spacing_small</dimen>
    <dimen name="list_subheader_height">48dp</dimen>
    <dimen name="list_padding_side">@dimen/spacing_mid</dimen>

</resources>
