<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/quizzes_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tips_textView"
        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/overview_textView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_subheader_height"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/msg_default_overview"
        android:textSize="@dimen/text_subhead"/>

    <TextView
        android:id="@+id/tips_textView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_subheader_height"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/overview_textView"
        android:text="@string/msg_default_tips"
        android:textSize="@dimen/text_caption"/>

</RelativeLayout>